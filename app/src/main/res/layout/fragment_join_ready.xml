<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.drsystems.unleash.Join"
    android:background="@drawable/background2"
    android:id="@+id/joinReadyFrag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players Waiting"
        android:id="@+id/textView2"
        android:textColor="#ffe3f5ff"
        android:textSize="35dp"
        android:layout_marginTop="141dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numPlayers"
        android:textColor="#ffe3f5ff"
        android:textColorHint="#ffe3f5ff"
        android:hint="0"
        android:textSize="35dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/htp"
        android:id="@+id/playButton"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:textSize="35dp"
        android:textColor="#ffe3f5ff"
        android:singleLine="true"
        android:background="#ff181e21"
        android:nestedScrollingEnabled="false"
        android:onClick="letsPlay" />

</RelativeLayout>
